{% extends 'base.html.twig' %}

{% block title %}
	Utilisateur
{% endblock %}

{% block body %}
	<h1>Utilisateur</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>Alias</th>
				<td>{{ user.alias }}</td>
			</tr>
			<tr>
				<th>PhoneNumber</th>
				<td>{{ user.phoneNumber }}</td>
			</tr>
			<tr>
				<th>Zipcode</th>
				<td>{{ user.zipcode }}</td>
			</tr>
			<tr>
				<th>Firstname</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th>Picture</th>
				<td>{{ user.picture }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
	<div class="d-flex align-items-center">
		<a href="{{ path('app_backoffice_user_index') }}" class="btn btn-secondary">Retour</a>
		<a href="{{ path('app_backoffice_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
		{{ include('backoffice/user/_delete_form.html.twig') }}
	</div>
{% endblock %}
