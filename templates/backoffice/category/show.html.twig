    <a href="{{ path('app_backoffice_category_edit', {'id': category.id}) }}">Editer</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
